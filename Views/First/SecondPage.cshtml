@{
    ViewBag.Page = "SecondPage";
}

@model Assignment1.Models.SecondPageModel


<body>
    <h1>@ViewBag.Page</h1>
    <h2>This is my Second Page</h2>
    <h2>Grade Calculator</h2>
    <form method="Post">
        <label>Assignments</label>
        <input id="Assignments" type="number" asp-for="Assignments" />
        <br />
        <label>Group Projects</label>
        <input id="Projects" type="number" asp-for="Projects" />
        <br />
        <label>Quizes</label>
        <input id="Quiz" type="number" asp-for="Quiz" />
        <br />
        <label>Exams</label>
        <input id="exam" type="number" asp-for="exam" />
        <br />
        <label>INTEX</label>
        <input type="number" id="INTEX" asp-for="INTEX" />
        <br />
        <br />
        <input type="submit" id="submitButton" />
        <div asp-validation-summary="All"></div>
    </form>

</body>